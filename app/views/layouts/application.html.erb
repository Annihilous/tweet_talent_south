<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Twwweeeet</title>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" %>
	<%= javascript_include_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"%>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>


<body>

<% if user_signed_in? %>
	<nav class="navbar navbar-default">
	  <div class="container-fluid">
	    <div class="navbar-header">
	      <%= link_to "Feed", tweets_path, class: "navbar-brand" %>
	    </div>
	    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	      <ul class="nav navbar-nav navbar-left">
	      	<li><%= link_to "Following", feed_path %></li>
	      	<li><%= link_to 'New Tweet', new_tweet_path %></li>
	      </ul>
	      <ul class="nav navbar-nav nav-center">
	      	<h2>Welcome <%= current_user.name %>!</h2>
	      </ul>

	      <ul class="nav navbar-nav navbar-right">
	        <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
	        <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
	      </ul>
	    </div>
	  </div>
	</nav>
<% else %>
	<nav class="navbar navbar-default">
	  <div class="container-fluid">
	    <div class="navbar-header">
	      <%= link_to "Tweets", tweets_path, class: "navbar-brand" %>
	    </div>

	    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	      <ul class="nav navbar-nav navbar-right">
	        <li><%= link_to "Sign Up",  new_user_registration_path %></li>
	        <li><%= link_to "Forgot Password",  new_user_password_path %></li>
	      </ul>
	    </div>
	  </div>
	</nav>
<% end %>


<div class="container">
<%= yield %>
</div>

</body>
</html>

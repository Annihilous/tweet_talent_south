<%= form_for(@tweet) do |f| %>
  <% if @tweet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tweet.errors.count, "error") %> prohibited this tweet from being saved:</h2>

      <ul>
      <% @tweet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :message %><br>
    <%= f.text_field :message, placeholder: "Align your words to exist in beautiful harmony with the honorable nature of your wonderously fair community.", class: "form-control" %>
  </div>
  <div class="field cant-see-me">
    <%= f.label :user_id %><br>
    <%= f.number_field :user_id, value: current_user.id %>
  </div>
  <div class="actions">
    <%= f.submit "Rejoyce", class: "btn" %>
  </div>
<% end %>
